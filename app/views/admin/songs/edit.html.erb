
<p>Редактировать</p>
<p><%= link_to "Назад", admin_song_path %></p>
<%= form_for [:admin, @song] do |f| %>
  <p>Исполнитель: <br/> <%= f.select :artist_id, @artists.order(:id).pluck(:singer, :id) %></p>
  <p>Альбом: <br/> <%= f.select :album_id, Album.all.order(:id).pluck(:name, :id) %></p>
  <p>Название: <br/> <%= f.text_field :title %></p>
  <p>Текст песни: <br/> <%= f.text_area :text %></p>
  <p><%= f.submit "Сохранить"%></p>
<% end %>